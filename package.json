{
  "name": "ruffion-game",
  "version": "0.0.1",
  "description": "",
  "author": "FRT",
  "private": true,
  "scripts": {
    "develop": "nest start --debug --watch",
    "develop:repl": "nest start --debug --watch -- --with-repl",
    "prod:prebuild": "rimraf dist",
    "prod:build": "nest build",
    "prod:start": "node dist/src/main",
    "format": "npm run lint -- --fix",
    "format:ts": "npm run lint:ts -- --fix",
    "format:gql": "npm run lint:gql -- --fix",
    "lint": "eslint \"{src,test}/**/*.{ts,graphql}\"",
    "lint:ts": "eslint \"{src,test}/**/*.ts\"",
    "lint:gql": "eslint \"{src,test}/**/*.graphql\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:debug": "npm run exec:js node_modules/.bin/jest --runInBand",
    "db:migrate:gen:win": "npm run typeorm migration:generate src/database/migrations/%npm_config_name%",
    "db:migrate:gen": "npm run typeorm migration:generate src/database/migrations/$npm_config_name",
    "db:migrate:up": "npm run typeorm migration:run",
    "db:migrate:down": "npm run typeorm migration:revert",
    "db:drop": "npm run typeorm schema:drop",
    "db:reset": "npm run db:drop && npm run db:migrate:up && npm run db:seed",
    "db:seed": "npm run exec:ts src/database/seed.script.ts",
    "gql:gen": "npm run exec:ts src/gen-gql.script.ts",
    "mail:dev:up": "docker-compose up -d mailhog",
    "mail:dev:down": "docker-compose stop mailhog",
    "typeorm": "npm run exec:ts -- ./node_modules/typeorm/cli.js -d src/database/app.datasource.ts",
    "exec:ts": "ts-node -r tsconfig-paths/register",
    "exec:js": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register"
  },
  "dependencies": {
    "@apollo/server": "4.7.3",
    "@nestjs/apollo": "11.0.6",
    "@nestjs/common": "9.4.3",
    "@nestjs/config": "2.2.0",
    "@nestjs/core": "9.4.3",
    "@nestjs/graphql": "11.0.6",
    "@nestjs/jwt": "9.0.0",
    "@nestjs/passport": "9.0.0",
    "@nestjs/platform-express": "9.0.9",
    "@nestjs/typeorm": "9.0.1",
    "argon2": "0.28.7",
    "dotenv": "16.0.1",
    "express": "4.18.1",
    "graphql": "16.6.0",
    "graphql-subscriptions": "2.0.0",
    "passport": "0.6.0",
    "passport-jwt": "4.0.0",
    "pg": "8.7.3",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.6",
    "ts-morph": "15.1.0",
    "tsconfig-paths": "4.1.0",
    "typeorm": "0.3.7",
    "typeorm-naming-strategies": "4.1.0",
    "web3": "1.7.5"
  },
  "devDependencies": {
    "@graphql-eslint/eslint-plugin": "3.10.7",
    "@nestjs/cli": "9.0.0",
    "@nestjs/schematics": "9.0.1",
    "@nestjs/testing": "9.0.9",
    "@types/express": "4.17.13",
    "@types/jest": "28.1.6",
    "@types/node": "18.7.3",
    "@types/passport-jwt": "3.0.6",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.33.0",
    "@typescript-eslint/parser": "5.33.0",
    "eslint": "8.21.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-filenames": "1.3.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "28.1.3",
    "prettier": "2.7.1",
    "source-map-support": "0.5.21",
    "supertest": "6.2.4",
    "ts-jest": "28.0.7",
    "ts-loader": "9.3.1",
    "ts-node": "10.9.1",
    "typeorm-seeding": "1.6.1",
    "typescript": "4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
